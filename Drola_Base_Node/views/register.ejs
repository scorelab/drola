<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>User register</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css"
          integrity="sha384-Zug+QiDoJOrZ5t4lssLdxGhVrurbmBWopoEl+M6BdEfwnCJZtKxi1KgxUyJq13dy"
          crossorigin="anonymous">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet"/>

    <style>
        body{
            padding-top: 30px;
        }
    </style>
</head>
<body>

<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
        <h1><span class="fa fa-sign-in"></span> Sign-up</h1>

        <!-- Flash Messages -->

        <% if (success_msg != '') { %>
        <div class="alert alert-success"><%= success_msg %></div>
        <% } %>
        <% if (error_msg != '') { %>
        <div class="alert alert-danger"><%= error_msg %></div>
        <% } %>

        <br>
        <form action="/register" method="post">
            <div class="form-group">
                <label>Your full name: </label>
                <input type="text" class="form-control" name="name" placeholder="James Lebron">
            </div>
            <div class="form-group">
                <label>Username: </label>
                <input type="text" class="form-control" name="username" placeholder="jamesharden">
            </div>
            <div class="form-group">
                <label>Your E-Mail Address: </label>
                <input type="text" class="form-control" name="email" placeholder="james.lebron@outlook.com">
            </div>
            <div class="form-group">
                <label>Your Password: </label>
                <input type="password" class="form-control" name="password">
            </div>
            <div class="form-group">
                <label>Confirm Password: </label>
                <input type="password" class="form-control" name="password2">
            </div>
            <button type="submit" class="btn btn-success btn-lg">Signup</button>
        </form>
        <hr>
        <p>Already have an account? <a href="/login" style="color: darkblue">Login</a></p>
        <p>Or go <a href="/" style="color: darkblue;">home</a>.</p>
    </div>
</div>

</body>
</html>